<!-- Tabla Independiente => TipoGranContribuyente-->

@model SERVIBARRAS.Models.TipoGranContribuyente
@{
    ViewData["Title"] = "Editar TipoGranContribuyente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Editar tipograncontribuyente</h3>
<form method="post" asp-action="Edit"  id="formTipoGranContribuyente">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TipoGranContribuyenteId" />
        <div class="col-10 offset-1 mt-4">

           <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreTipoGranContribuyente">NombreTipo Gran Contribuyente</label>
                </div>
                <div class="col-8">
                    <input id="IdNombreTipoGranContribuyente" asp-for="NombreTipoGranContribuyente" class="form-control" type="text" maxlength="400"/>
                    <span asp-validation-for="NombreTipoGranContribuyente" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.TipoGranContribuyenteId">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>




