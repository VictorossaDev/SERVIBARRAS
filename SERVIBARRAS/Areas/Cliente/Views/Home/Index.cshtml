@model SERVIBARRAS.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<!--SLIDER-->
   <!--SLIDER-->
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{ int cont = 0; }
                @foreach (var item in Model.Slider)
                {
                    var itemDinamico = cont++ == 0 ? "item active" : "item";

                    <!-- Slide One - Set the background image for this slide in the line below -->
                    <div class="carousel-item @itemDinamico">
                        <img style="width:600px;height:500px;float:left; margin: 15px; border-radius:20px" src="@Url.Content(item.UrlImagen)" />
                        <div class="container">
                            <h1 class="text-dark text-center" style="margin:15px">@Html.Raw(@item.Titulo)</h1>
                            <h2  class="text-center">@Html.Raw(@item.Contenido)</h2>
                        </div>
                    </div>
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>
